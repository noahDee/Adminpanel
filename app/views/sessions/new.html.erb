<div class="demo">
  <%= form_for(:session, authenticity_token: true) do |f|%>
  <%= f.hidden_field :email, value: "admin@panel.com"%>
  <%=  f.hidden_field :password, value: "admin"%>
  <%=  f.hidden_field :user, value: 'Admin'%>
  <%=  f.submit "Here for a Demo? Click here"%>
  <% end%>
</div>
<h1>Login</h1>
<%= form_for(:session) do |f|%>

<div class="form-row">
  <%= f.label :email, {class: "col-form-label col-md-1 offset-md-4 text-left"}  %>
  <div class="form-group col-3  ml-0">
    <%= f.email_field :email, {class: "form-control"} %>
  </div>
</div>
<div class="form-row">
  <%=  f.label :password, {class: "col-form-label col-md-1 offset-md-4 text-left"}%>
  <div class="form-group col-3 ml-0">
    <%=  f.password_field :password, {class: "form-control"}%>
  </div>
</div>
<div class="form-row">
  <%=  f.label :user, {class: "col-form-label col-md-1 offset-md-4 text-left"}%>
  <div class="form-group col-2 offset-md-1 ml-0">
    <%=  select_tag(:user, options_for_select([['Admin'], ['Student'], ['Instructor']]), {class: "form-control"})%>
  </div>
</div>
<div class="form row">
<div class="form-group col-sm-2 offset-md-5">
  <%=  f.submit "Log in"%>

</div>
</div>
<% end%>
