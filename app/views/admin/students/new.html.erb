<h1>Add new Student</h1>
<div class="container main">

<%= form_for [:admin, @student] do |f|%>
<div class="form-row">
  <%= f.label :first_name, "First Name", {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.text_field :first_name%><br>
  </div>
</div>

<div class="form-row">
  <%= f.label :last_name, "Last Name", {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.text_field :last_name%><br>
  </div>
</div>

<div class="form-row">
  <%= f.label :email, {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.email_field :email%><br>
  </div>
</div>

<div class="form-row">
  <%= f.label :education, "Education Level", {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.select:education, [['Highschool'], ['College'], ['Masters'], ['PhD']]%><br>
  </div>
</div>

<div class="form-row">
  <%= f.label :age, {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.number_field :age%><br>
  </div>
</div>
<div class="form-group">
  <%= f.submit "Submit"%>
</div>
<% end %>
</div>
