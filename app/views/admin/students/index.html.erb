<h1>Students#index</h1>
<p>Find me in app/views/students/index.html.erb</p>
<div class="container">

<div class="row">
  <div class="col-md-2">
    FIRST NAME
  </div>
  <div class="col-md-2">
    LAST NAME
  </div>
  <div class="col-md-2">
    AGE
  </div>
  <div class="col-md-2">
    EDUCATION
  </div>
  <div class="col-md-2">
    ENROLLED
  </div>
  <div class="col-md-2">
    OPTIONS
  </div>
</div>
</div>
<div class="main">
<% Student.all.each do |s|%>

<div id = "<%"#{s.id}"%>"class="row">
  <div class="col-md-2">
    <%= link_to(s.first_name, "/admin/students/#{s.id}")%>
  </div>
  <div class="col-md-2">
    <%= link_to(s.last_name, "/admin/students/#{s.id}")%>
  </div>
  <div class="col-md-2">
    <%= link_to(s.age, "/admin/students/#{s.id}")%>
  </div>
  <div class="col-md-2">
    <%= link_to(s.education, "/admin/students/#{s.id}")%>
  </div>
  <div class="col-md-2">
    <%= link_to(s.enrolled.to_s, "/admin/students/#{s.id}")%>
  </div>
  <div class="col-md-2">
    <a href=<%= "/admin/students/#{s.id}"%>>
      <span class="glyphicon glyphicon-user"></span>
    </a>
    <a href=<%= "/admin/students/#{s.id}/edit"%>>
      <span class="glyphicon glyphicon-edit"></span>
    </a>
    <%= link_to '', "/admin/students/#{s.id}", method: :delete, data: {confirm: 'Are you sure?', remote: true}, class: "glyphicon glyphicon-remove"%><br>

  </div>
</div>
<% end%>


</div>
