<h1>Instructors#edit</h1>
<p>Find me in app/views/instructors/edit.html.erb</p>
<%= form_for [:admin, @instr] do |f|%>
<%= f.label :first_name, "First Name"%>
<%= f.text_field :first_name%><br>
<%= f.label :last_name, "Last Name"%>
<%= f.text_field :last_name%><br>
<%= f.label :email%>
<%= f.email_field :email%><br>
<%= f.label :password%>
<%= f.password_field :password%><br>
<%= f.label :education, "Education Level"%>
<%= f.select(:education) do %>
  <% [['Highschool','Highschool'], ['College'], ['Masters'], ['PhD']].each do |c| -%>
    <%= content_tag(:option, c.first, value: c.last) %>
  <% end %>
  <% end%><br>
<%= f.label :age%>
<%= f.number_field :age%><br>
<%= f.label :salary%>
<%= f.number_field :salary%><br>
<%= f.submit "Submit"%>
<% end %>
