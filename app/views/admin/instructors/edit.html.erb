<h1>Edit</h1>
<p>Edit instructor <%= "#{@instr.last_name}, #{@instr.first_name}"%></p>
<%= form_for [:admin, @instr] do |f|%>
<%= f.label :first_name, "First Name"%>
<%= f.text_field :first_name%><br>
<%= f.label :last_name, "Last Name"%>
<%= f.text_field :last_name%><br>
<%= f.label :email%>
<%= f.email_field :email%><br>
<%= f.label :education, "Education Level"%>
<%= f.select:education, [['Highschool'], ['College'], ['Masters'], ['PhD']]%><br>
<%= f.label :age%>
<%= f.number_field :age%><br>
<%= f.label :salary%>
<%= f.number_field :salary%><br>
<%= f.submit "Submit"%>
<% end %>
