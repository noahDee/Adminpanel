<h1>Add new Instructor</h1>
<%= form_for [:admin, @instr] do |f|%>

  <div class="form-group">
    <%= f.text_field :first_name, placeholder: "First Name"%>
  </div>

  <div class="form-group">
    <%= f.text_field :last_name, placeholder: "Last Name"%>
  </div>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email"%>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder:"Password"%>
  </div>

<div class="form-group">
  <%= f.label :education, "Education Level", {class: ""}%><br>
  <%= f.select:education, [['Highschool'], ['College'], ['Masters'], ['PhD']], {class:"form-control"}%>
  </div>


<div class="form-group">
  <%= f.number_field :age, placeholder:"Age"%>
</div>

<div class="form-group">
  <%= f.number_field :salary, placeholder:"Salary"%>
</div>

<div class="form-group">

  <%= f.submit "Submit"%>
</div>
<% end %>
