<h1>Add new Instructor</h1>
<%= form_for [:admin, @instr] do |f|%>

<div class="form-row">
  <%= f.label :first_name, "First Name", {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.text_field :first_name%>
  </div>
</div>

<div class="form-row">
  <%= f.label :last_name, "Last Name", {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.text_field :last_name%>
  </div>
</div>

<div class="form-row">
  <%= f.label :email, {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.email_field :email%>
  </div>
</div>

<div class="form-row">
  <%= f.label :password, {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.password_field :password%>
  </div>
</div>

<div class="form-row">
  <%= f.label :education, "Education Level", {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.select:education, [['Highschool'], ['College'], ['Masters'], ['PhD']]%>
  </div>
</div>


<div class="form-row">
  <%= f.label :age, {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.number_field :age%>
  </div>
</div>

<div class="form-row">
  <%= f.label :salary, {class: "col-form-label col-md-2 offset-md-3"}%>
  <div class="form-group col-3 ml-0">
    <%= f.number_field :salary%>
  </div>
</div>

<div class="form-group">

  <%= f.submit "Submit"%>
</div>
<% end %>
