<%= form_for [:admin, @cohort] do |f|%>
<%= f.label :name%>
<%= f.text_field :name%><br>
<%= f.label :start_date, "Start Date"%>
<%= f.date_field :start_date, value: @cohort.start_date%><br>
<%= f.label :end_date, "End Date"%>
<%= f.date_field :end_date, value: @cohort.end_date%><br>
<%= f.label :instructor, "Instructor"%>
<%= collection_select(:cohort, :instructor_id, Instructor.all, :id, :first_name, {include_blank: true}) %><br>
<%= f.label :course_id, "Course"%>
<%= collection_select(:cohort, :course_id, Course.all, :id, :name, {include_blank: true}) %><br>
<%# <%= collection_select(:students, Student.all, :id, :first_name, {:multiple => true}, {class: "selectpicker"})%><br>
<%# <%= select_tag "students", options_from_collection_for_select(Student.all, :id, :first_name), {:multiple => true, class: "selectpicker",data: {"live-search": true, "selected-text-format": "static"}, title: "Instructors Below"}%> %>
<%= f.submit%>
<% end%>
