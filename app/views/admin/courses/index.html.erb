<h1>Courses</h1>
<p>Courses we currently offer</p>
<a href="/admin/courses/new"><button type="button" class="btn btn-success">New Course</button></a><br>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <b>NAME</b>
    </div>
    <div class="col-md-3">
      <b>HOURS</b>
    </div>
    <div class="col-md-3">
      <b>ACTIVE COHORTS</b>
    </div>
    <div class="col-md-3">
      <b>OPTIONS</b>
    </div>
  </div>
</div>
<div class="container">

<div class="main overflow-auto">

<% Course.all.each do |c|%>
<div id = "<%= c.id%>"class="row shadow-sm p-3 mb-5 bg-white rounded">
  <div class="col-md-3">
    <%= link_to(c.name, "/admin/courses/#{c.id}")%>

  </div>
  <div class="col-md-3">
    <%= link_to(c.class_hours, "/admin/courses/#{c.id}")%>

  </div>
  <div class="col-md-3">
    <%= link_to(c.cohorts.count, "/admin/courses/#{c.id}")%>

  </div>
  <div class="col-md-3">
    <a href=<%= "/admin/courses/#{c.id}/edit"%>>
      <i class="fas fa-edit float-left"></i>
    </a>
    <a href=<%= "/admin/courses/#{c.id}"%>>
      <i class="fas fa-book"></i>
    </a>
    <%= link_to '', "/admin/courses/#{c.id}", method: :delete, data: {confirm: 'Are you sure?', remote: true}, class: "fas fa-trash-alt float-right"%><br>
  </div>
</div>
<% end%>
</div>
